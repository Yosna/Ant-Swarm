{
    "globals": {
      "$": true,
      "Decimal": true
    },
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "plugins": ["jest", "import"],
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:jest/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "semi": ["error", "always"],
        "no-extra-semi": "error",
        "space-before-function-paren": ["error", "never"],
        "no-multi-spaces": ["error", { "ignoreEOLComments": true, "exceptions": { "Property": true } }],
        "import/no-cycle": ["error", { "maxDepth": 100 }]
    }
}
